{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "pipeline": {
    "api": {
      "outputs": [
        ".next/**",
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "env": [
        "DATAPORTEN_AUTH_ENDPOINT",
        "DATAPORTEN_ID",
        "DATAPORTEN_SECRET",
        "ES_HOST",
        "ES_APIKEY",
        "NEXT_PUBLIC_ES_INDEX",
        "NEXT_PUBLIC_SANITY_PROJECT_ID",
        "NEXT_PUBLIC_SANITY_DATASET",
        "NEXT_PUBLIC_SANITY_STUDIO_URL",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "VERCEL_ENV",
        "SANITY_REVALIDATE_SECRET",
        "SANITY_API_TOKEN"
      ]
    }
  }
}