{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "pipeline": {
    "api": {
      "outputs": [
        ".next/**",
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "env": [
        "VERCEL_ENV",
        "VERCEL_URL",
        "NEXTAUTH_SECRET",
        "DATAPORTEN_ID",
        "DATAPORTEN_SECRET",
        "MARCUS_API",
        "SKA_API",
        "ES_HOST",
        "ES_APIKEY",
        "ES_PATH",
        "ES_INDEX_SECRET",
        "NEXT_PUBLIC_VERCEL_URL",
        "NEXT_PUBLIC_PUBLIC_DOMAIN"
      ]
    }
  }
}